<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vlt.android.intervaltimerxp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="vlt.android.intervaltimerxp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vlt.android.intervaltimerxp.AddTrainingActivity"
            android:label="@string/title_activity_add_training" >
        </activity>
        <activity
            android:name="vlt.android.intervaltimerxp.TrainingActivity"
            android:label="@string/title_activity_training" >
        </activity>
        <activity
            android:name="vlt.android.intervaltimerxp.TrainingHistoryActivity"
            android:label="@string/title_activity_training_history"
            android:parentActivityName="com.j256.ormlite.android.apptools.OrmLiteBaseListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.j256.ormlite.android.apptools.OrmLiteBaseListActivity" />
        </activity>
    </application>

</manifest>
